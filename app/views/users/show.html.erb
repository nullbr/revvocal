<section class="shadow-md dark:shadow-none w-full">
  <div class="h-[45px] md:h-[100px] rounded-t-[6px] bg-primary"></div>
  <div class="flex flex-col items-start md:items-center py-4 bg-white dark:bg-dm-2 mb-3 rounded-b-[6px]">

    <%= image_tag profile_img(current_user), class: "border-solid border-4 md:border-8 border-primary rounded-full w-20 h-20 md:w-40 md:h-40 absolute left-12 md:left-auto top-16 md:top-8" %>

    <div class='flex flex-col items-center md:items-start md:gap-x-9 md:mt-9 pl-3 md:pl-0 md:pb-4 pt-10'>
      <div>
        <% unless current_user.full_name.present? %>
          <h1 class='text-3xl text-left md:text-center font-bold'><%= current_user.username %></h1>
        <% else %>
          <h1 class='text-3xl text-left md:text-center font-bold'><%= current_user.full_name%></h1>
          <h3 class='text-2xl text-left md:text-center text-gray-600 dark:text-gray-400 font-bold'><%= current_user.username%></h1>
        <% end %>
      </div>
    </div>
  </div>
</div>
