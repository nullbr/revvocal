<div class="m-auto max-w-sm w-full flex flex-col">
  <%= image_tag "logo_nav.svg", class: "h-20 w-auto" %>

  <h1 class="self-center">RevVocal</h1>

  <h3 class="text-center md:text-left text-xl my-8 duration-500 self-center">Engine Harmonics Challenge</h3>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <h4 class="text-center mb-2">Already have an account? <u><%= link_to "Sign up", new_registration_path(resource_name) %></u></h4>
  <% end %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
    <div class="field">
      <%= f.text_field :login, placeholder: 'Email or Username', :class => 'input-primary dark:input-dark' %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', :class => 'input-primary dark:input-dark' %>
    </div>

    <div class="actions">
      <%= f.submit "Log in", :class => 'btn-primary font-bold py-2 bg-emerald-600 hover:bg-emerald-500' %>
    </div>

    <%= render "devise/shared/links" %>

    <% if devise_mapping.rememberable? %>
      <div class="field text-center my-1 duration-500">
        <%= f.check_box :remember_me, class: "w-4 h-4 border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-primary-300 cursor-pointer hover:scale-105 mr-2" %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <div class="text-center duration-500 underline">
        <%= link_to "Forgot your password?", new_password_path(resource_name) %>
      </div>
    <% end %>
  <% end %>
</div>
